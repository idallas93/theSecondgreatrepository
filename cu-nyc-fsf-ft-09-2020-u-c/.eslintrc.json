{
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "no-alert": 0,
    "no-console": 0
  },
  "overrides": [
    {
      "files": [
        "01-HTML-Git-CSS/**",
        "02-CSS-Bootstrap/**",
        "03-JavaScript/**",
        "04-Web-APIs/**",
        "05-Third-Party-APIs/**",
        "06-Server-Side-APIs/**"
      ],
      "rules": {
        "no-var": "off",
        "vars-on-top": 0,
        "block-scoped-var": 0,
        "no-redeclare": 0,
        "no-plusplus": 0,
        "no-undef": 0,
        "no-alert": 0,
        "no-console": 0
      },
      "env": {
        "es6": false
      }
    }
  ]
}
